generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  nama         String
  email        String   @unique
  password     String
  alamat       String?
  no_hp        String?
  role         Role     @default(user)
  foto_profile String?  @default("user.jpg")
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt
}

enum Role {
  admin
  user
}
